{
  "name": "neominnthu/laravel-modules",
  "description": "A Laravel 12 modular system package for creating and managing application modules.",
  "type": "library",
  "license": "MIT",
  "keywords": ["laravel", "modules", "modular", "package"],
  "authors": [
  {"name": "Neominn Thu", "email": "tomozaki.neo@gmail.com"}
  ],
  "require": {
    "php": ">=8.3",
    "illuminate/support": "^12.0"
  },
  "autoload": {
    "psr-4": {
      "Modules\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "extra": {
    "laravel": {
      "providers": [
        "Modules\\ModulesServiceProvider"
      ]
    },
    "funding": [
      {"type": "github", "url": "https://github.com/sponsors/yourname"}
    ],
    "support": {
  "issues": "https://github.com/neominnthu/laravel-modules/issues",
  "source": "https://github.com/neominnthu/laravel-modules"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Modules\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/pest",
  "format": "vendor/bin/pint",
  "analyse": "vendor/bin/phpstan analyse"
  },
  "require-dev": {
    "pestphp/pest": "^3.0",
    "pestphp/pest-plugin-laravel": "^3.0",
  "laravel/pint": "^1.16",
  "phpstan/phpstan": "^1.11"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
